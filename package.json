{
  "name": "dropship-monitor",
  "version": "1.0.0",
  "description": "AI-powered dropshipping monitoring and automation platform",
  "private": true,
  "workspaces": [
    "functions",
    "dashboard"
  ],
  "scripts": {
    "dev": "./scripts/start-local-dev.sh",
    "dev:emulators": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:functions": "cd functions && npm run serve",
    "seed:data": "npx ts-node scripts/seed-test-data.ts",
    "build": "npm run build:functions && npm run build:dashboard",
    "build:functions": "cd functions && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "deploy": "./scripts/deploy.sh --all",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "test": "npm run test:functions",
    "test:functions": "cd functions && npm test",
    "lint": "npm run lint:functions && npm run lint:dashboard",
    "lint:functions": "cd functions && npm run lint",
    "lint:dashboard": "cd dashboard && npm run lint"
  },
  "devDependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
